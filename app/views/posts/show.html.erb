<p style="color: green"><%= notice %></p>

<div class="wrapper">
  <div class="main-content">
    
    <%= render @post %>

    <div>
      <%= link_to "Back to home", posts_path %> |
      <%= link_to "Edit this post", edit_post_path(@post) %>
    </div>

    <div class=delbtn> 
      <%= button_to "Delete this post", @post, method: :delete %>
    </div>
    
    <div>
      <h4>Comments:</h4>
      <% @comments.each do |comment| %>
        <p>
          <strong><%= comment.author %></strong>
          <%= comment.content %>
        </p>
      <% end %>
    </div>
    
    <div>
      <%= link_to "Leave a comment", new_post_comment_path(@post) %>
    </div>

  </div>

  <footer>
    Avion School 2025
  </footer>
</div>



